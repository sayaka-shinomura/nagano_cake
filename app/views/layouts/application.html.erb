<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/a7b743e44e.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="vavbar-brand text-light" href="/">
            <%= link_to items_path, class: 'nav-link text-white' do %>
            <span>LOGO</span>
            <% end %>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <!--#管理者がサインインしているときのヘッダー-->
            <% if admin_signed_in? %>
            <li class="nav-item">
              <%= link_to admin_items_path, class: 'nav-link text-white' do %>
              <span>商品一覧</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_customers_path, class: 'nav-link text-white' do %>
              <span>会員一覧</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to admin_path, class: 'nav-link text-white' do %>
              <span>注文履歴一覧</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-white' do %>
              <span>ログアウト</span>
              <% end %>
            </li>

            <!--#ユーザーがサインインしているときのヘッダー-->
            <% elsif customer_signed_in? %>
            <li class="nav-item">
              <%= link_to customers_mypage_path, class: 'nav-link text-white' do %>
              <span>マイページ</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to items_path, class: 'nav-link text-white' do %>
              <span>商品一覧</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to cart_items_path, class: 'nav-link text-white' do %>
              <span>カート</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-white' do %>
              <span>ログアウト</span>
              <% end %>
            </li>

            <!--#サインインしていない時のヘッダー-->
            <% else %>
            <li class="nav-item">
              <%= link_to root_path, class: 'nav-link text-white' do %>
              <span>About</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to items_path, class: 'nav-link text-white' do %>
              <span>商品一覧</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_customer_registration_path, class: 'nav-link text-white' do %>
              <span>新規登録</span>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to customer_session_path, class: 'nav-link text-white' do %>
              <span>ログイン</span>
              <% end %>
            </li>
            <% end %>
            </ul>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer class="container mt-5">
      <div class="row">
        <div class="mx-auto">
        </div>
      </div>
    </footer>

  </body>
</html>

