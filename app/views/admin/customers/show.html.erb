<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <br>
      <h4 class="my-3"><%= @customer.full_name %>さんの会員詳細</h4>
      <table class="table">
        <tbody>
            <tr><td>会員ID</td><td><%= @customer.id %></td></tr>
            <tr><td>氏名</td><td><%= @customer.full_name %></td></tr>
            <tr><td>フリガナ</td><td><%= @customer.full_name_kana %></td></tr>
            <tr><td>郵便番号</td><td><%= @customer.postal_code %></td></tr>
            <tr><td>住所</td><td><%= @customer.address %></td></tr>
            <tr><td>電話番号</td><td><%= @customer.telephone_number %></td></tr>
            <tr><td>メールアドレス</td><td><%= @customer.email %></td></tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <% if @customer.is_deleted %>
                <p class="text-muted"><strong>退会</strong></p>
                <% elsif %>
                <p class="text-success"><strong>有効</strong></p>
                <% end %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td>
                <%= link_to "編集する", admin_customer_edit_path(@customer), class:"btn btn-success mr-5" %>
                <%= link_to "注文履歴一覧を見る", admin_path(@customer), class:"btn btn-primary" %>
              </td>
            </tr>
        </tbody>
    </table>
    </div>
  </div>
</div>

