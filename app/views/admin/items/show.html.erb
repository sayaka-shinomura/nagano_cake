<div class="container">
  <h4 class="my-3">商品詳細</h4>
  <div class="row">
     <div class="col-lg-3 offset-md-1">
         <%= image_tag @item.image, :size => '200x180' %>
    </div>
    <div class="col-lg-6">
        <table class="table">
          <tbody>
            <tr>
              <td><p>商品名</p></td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td><p>商品説明</p></td>
              <td><%= @item.introduction %></td>
            </tr>
            <br>
            <tr>
              <td><p>税込価格(税抜価格)</p></td>
              <td><p><%= @item.add_tax_price.to_s(:delimited) %> (<%= @item.price %>) 円</p></td>
            </tr>
        </tbody>
        </table>
        <div class="form-group">
          <%= link_to "編集する", admin_item_edit_path(@item), class:"btn btn-success" %>
        </div>
    </div>
  </div>
</div>





