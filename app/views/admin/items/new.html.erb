<div class="container">
 <div class="row">
  <div class="com-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2 class="mt-3">商品新規登録</h2>
  <!--#新規投稿エラーメッセージの表示-->
  <div class="form-body p-4">
   <% if @item.errors.any? %>
   <%= @item.errors.count %>error prohibited this obj from being saved:
   <ul>
    <% @item.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
   </ul>
   <% end %>

   <%= form_with model: Item.new do |f| %>
   <div class="form-group">
    <label for="inputImage">商品画像</label>
    <%= f.file_field :item_image, placeholder: "Image", accept: "image/*", class: "w-100" %>
   </div>

   <div class="form-group">
    <label for="inputTitle">商品名</label>
         <%= f.text_field :name, autofocus: true, id:"inputTitle", class:"form-control" %>
   </div>

   <div class="form-group">
    <label for="inputBody">商品説明</label>
         <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:"form-control" %>
   </div>

   <div class="form-group">
    <label for="inputTitle">税抜き価格</label>
         <%= f.text_field :name, autofocus: true, id:"inputTitle", class:"form-control" %>円
   </div>

    <div class="form-group">
     <%= f.submit '新規登録', class:"btn btn-success" %>
    <div class="form-group">
    <% end %>
    </div>
  </div>
 </div>
</div>
