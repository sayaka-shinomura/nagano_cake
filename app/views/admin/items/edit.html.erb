<p id="notice"><%= notice %></p>

<div class="container">
 <div class="row">
  <div class="com-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>商品編集</h2>
   <div class="form-body p-4">
        <% if @item.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @item.errors.count %>error prohibited this obj from being saved:
            </h6>
            <% @item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_with model: @item, url: admin_items_path, method: :patch do |f| %>
        <div class="form-group">
         <label for="inputImage">商品画像</label>
         <%= f.file_field :item_image, placeholder: "Image", accept: "image/*", class: "w-100" %>
        </div>
        <div class="form-group">
         <label for="inputName">商品名</label>
         <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name", class:"form-control" %>
        </div>
        <div class="form-group">
         <label for="inputIntrodunction">商品説明</label>
         <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", class:"form-control" %>
        </div>
        <div class="form-group">
         <label for="inputPrice">税抜価格</label>
         <%= f.text_field :price, autofocus: true, id:"inputPrice", class:"form-control" %>
        </div>
        <div class="form-group">
         <%= f.submit '変更を保存', class:"btn btn-secondary" %>
        <% end %>
        </div>
   </div>
  </div>
 </div>
</div>

