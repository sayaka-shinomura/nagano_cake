<div class="container">
  <div class="row px-5 py-4">
    <h4 class="my-3">商品一覧</h4>
    <div class="col-6 text-right my-3">
          <%= link_to "＋", admin_items_new_path, class:"btn btn-warning rounded-circle" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
         <tr>
          <th align="left">商品ID</th>
          <th align="left">商品名</th>
          <th align="left">税抜価格</th>
         </tr>
        </thead>
        <tbody>
          <tr><% @items.each do |item| %></tr>
            <td><%= item.id %></td>
            <td>
             <%= link_to admin_item_show_path(item) do %>
             <p><%= item.name %></p>
             <% end %>
            </td>
            <td><%= item.price %></td>
            <% end %>
        </tbody>
    </table>
    <%= paginate @items %>
    </div>
  </div>
</div>

