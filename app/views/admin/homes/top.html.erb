<div class="container">
<div class="row">
<div class="col-md-8 offset-md-1">
    <h4 class="my-3">注文履歴一覧</h4>
    <table class="table">
      <thead>
         <tr>
          <th align="left">購入日時</th>
          <th align="left">購入者</th>
          <th align="left">注文個数</th>
         </tr>
        </thead>
        <tbody>
          <tr><% @orders.each do |order| %></tr>
            <td><%= link_to order.created_at.strftime("%Y/%m/%d %H:%M"), admin_order_path(order) %></td>
            <td><%= order.name %></td>
            <td><%= order.order_details.sum(:amount) %></td>
            <% end %>
        </tbody>
    </table>
    <%= paginate @orders %>
 </div>
</div>
</div>

