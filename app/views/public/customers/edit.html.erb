<p id="notice"><%= notice %></p>

<div class="container">
 <div class="row">
  <div class="col">
   <h4 class="my-3">会員情報編集</h4>
   <div class="form-body p-4">
        <% if @customer.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @customer.errors.count %>error prohibited this obj from being saved:
            </h6>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <table class="table table-borderless">
          <%= form_for @customer, url: customers_information_path, method: :patch do |f| %>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :last_name %>　<%= f.text_field :first_name %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %></td>
        </tr>

        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, :size=>"60" %></td>
          <td></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>

        <tr>
          <td></td>
          <td>
           <%= f.submit '編集内容を保存', class:"btn btn-success mr-5" %>
           <%= link_to customers_check_path, class:"btn btn-danger" do %>
           <span>退会する</span>
           <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
