<p id="notice"><%= notice %></p>

<div class="container">
 <div class="row">
  <div class="com-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>会員情報編集</h2>
   <div class="form-body p-4">
        <% if @customer.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @customer.errors.count %>error prohibited this obj from being saved:
            </h6>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= form_for @customer, url: customers_information_path, method: :patch do |f| %>
        <div class="form-group">
         <label for="inputLast_name">姓</label>
         <%= f.text_field :last_name, autofocus: true, id:"inputLast_name", class:"form-control" %>
         <label for="inputFirst_name">名</label>
         <%= f.text_field :first_name, autofocus: true, id:"inputFirst_name", class:"form-control" %>
        </div>
        <div class="form-group">
         <label for="inputLast_name_kana">セイ</label>
         <%= f.text_field :last_name_kana, autofocus: true, id:"inputLast_name_kana", class:"form-control" %>
         <label for="inputFirst_name_kana">メイ</label>
         <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirst_name_kana", class:"form-control" %>
        </div>

        <div class="form-group">
         <label for="inputPostal_code">郵便番号</label>
         <%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", class:"form-control" %>
        </div>
        <div class="form-group">
         <label for="inputAddress">住所</label>
         <%= f.text_field :address, autofocus: true, id:"inputAddress", class:"form-control" %>
        </div>
        <div class="form-group">
         <label for="inputTelephone_number">電話番号</label>
         <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone_number", class:"form-control" %>
        </div>
        <div class="form-group">
         <label for="inputEmail">メールアドレス</label>
         <%= f.email_field :email, autofocus: true, id:"inputEmail", class:"form-control" %>
        </div>

        <div class="d-grid gap-2 d-md-block">
         <%= f.submit '編集内容を保存', class:"btn btn-sm btn-success" %>
        <% end %>

         <%= link_to customers_check_path, class:"btn btn-sm btn-danger" do %>
         <span>退会する</span>
         <% end %>
        </div>

   </div>
  </div>
 </div>
</div>
