<div class="container">
  <h4 class="my-3">注文履歴一覧</h2>
  <div class"row">
    <div class="col-md-10 offset-md-1">
    <table class="table table-hover table-inverse table-bordered custom-table">
        <thead>
            <tr align=left >
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>注文詳細</th>
            </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr align=left >
            <td><%= order.created_at.strftime("%Y/%m/%d %H:%M") %></td>
            <td>
              <%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td></td>
            <td><%= order.billing_amount.to_s(:delimited) %></td>
      　     <td></td>
    　    　</tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>