<div class="container">
  <h4 class="my-3">注文履歴一覧</h2>
    <table class="table table-hover table-inverse table-bordered custom-table">
        <thead>
            <tr align=left >
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>注文詳細</th>
            </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr align=left >
            <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td>
              <%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
              <% end %>
            </td>
            <td class="text-center"><%= order.billing_amount.to_s(:delimited) %></td>
            <td class="text-center"><%= link_to "表示する", order_path(order.id), class: "btn btn-primary text-center" %></td>
    　    　</tr>
          <% end %>
        </tbody>
    </table>
</div>