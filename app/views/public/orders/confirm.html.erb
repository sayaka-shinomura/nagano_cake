<div class="container">
  <h4 class="my-3">注文情報確認</h4>
  <div class="row mt-3">
    <div class="col-xs-8">
    <table class="table table-striped table-bordered table-hover table-sm">
      <thead>
        <tr align=left >
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr align=left >
        <td>
          <%= attachment_image_tag(cart_item.item, :image, size: "60x50") %>
          <%= cart_item.item.name %>
        </td>
        <td><%= (cart_item.item.price*1.1).floor.to_i %></td>
        <td><%= cart_item.amount %></td>
        <td><%= (cart_item.item.price * cart_item.amount * 1.1).floor.to_s %></td>
      </tr>
      <% total += (cart_item.item.price*cart_item.amount)*1.1 %>
      <% end %>
      </tbody>
    </table>
    </div>

    <%= form_with model: @order, url: orders_path, local: true do |f| %>
    <div class="col-xs-3">
    <table class="table table-striped table-bordered table-hover table-sm">
      <tbody>
        <tr>
          <td>送料</td>
          <td><%= @order.postage.to_s %></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td><%= @total_payment.to_s %></td>
        </tr>
        <tr>
          <td>請求金額</td>
          <td><%= (@total_payment + 800).to_s %></td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>

  <div class="form-group">
    <h3>支払方法:</h3>
    <h4><%= @order.payment_method_i18n %></h4>
    <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  </div>

    <div class="form-group">
      <h3>お届け先:</h3>
      〒<%= @order.postal_code.to_s %>
      <%= f.hidden_field :postal_code, :value => @order.postal_code %>
      <%= @order.address %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= @order.name %>
      <%= f.hidden_field :name, :value => @order.name %>
    </div>
    <div class="text-left">
      <%= link_to "情報入力へ戻る", new_order_path, class: "btn btn-primary" %>
    </div>
    <div class="text-center">
      <%= f.submit "購入を確定する", class: "btn btn-success btn-lg text-center" %>
    </div>
  <% end %>
</div>
