<div class="container">
  <h4 class="my-3">注文情報確認</h4>
  <div class="row mt-3">
    <div class="col-md-10 offset-md-1">
    <table class="table table-hover table-inverse table-bordered custom-table">
      <tr align=left >
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
      </tr>
    <% total = 0 %>
    <% @cart_items.each do |cart_item| %>
      <tr align=left >
        <td>
          <%= attachment_image_tag(cart_item.item, :image, size: "60x50") %>
          <%= cart_item.item.name %>
        </td>
        <td><%= (cart_item.item.price*1.08).to_i %></td>
        <td><%= cart_item.amount %></td>
        <td>
          <% subtotal = ((cart_item.item.price*cart_item.amount)*1.1).to_i %>
          <%= subtotal %>
        </td>
      </tr>
      <% total += (cart_item.item.price*cart_item.amount)*1.1 %>
      <% end %>
    </table>

    <table>
      <tr>
        <th>送料</th>
         <% @order.postage = 800 %>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <th>商品合計</th>
        <td><%= total_payment.to_i %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <% @order.billing_amount = @order.postage + total_payment.to_i %>
        <td><%= @order.billing_amount %></td>
      </tr>
    </table>
    </div>
  </div>
</div>