<div class="container">
  <h4 class="my-3">注文情報確認</h4>
  <div class="row mt-3">
    <div class="col-6">
    <table class="table table-striped table-bordered table-hover table-sm">
      <thead>
        <tr align=left >
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr align=left >
        <td>
          <%= image_tag cart_item.item.image, :size => '50x40' %>
          <%= cart_item.item.name %>
        </td>
        <td><%= (cart_item.item.price*1.1).floor.to_i %></td>
        <td><%= cart_item.amount %></td>
        <td><%= (cart_item.item.price * cart_item.amount * 1.1).floor.to_s(:delimited) %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
    </div>

    <%= form_with model: @order, url: orders_path, local: true do |f| %>
    <div class="col-6">
    <table class="table table-striped table-bordered table-hover table-sm">
      <tbody>
        <tr>
          <td>送料</td>
          <td><%= @order.postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td><%= @total_payment.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td>請求金額</td>
          <td><%= (@total_payment + 800).to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <h5 class="my-3"><strong>支払方法：</strong></h5>
      <p class="my-3"> <%= @order.payment_method_i18n %></p>
      <%= f.hidden_field :payment_method, :value => @order.payment_method %>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <h5 class="my-3"><strong>お届け先：</strong></h5>
      <p class="my-3">〒 <%= current_customer.postal_code %>
                      <%= current_customer.address %><br>
                      <%= current_customer.full_name %>
      </p>
    </div>
  </div>

  <div class="text-center">
    <%= f.submit "注文を確定する", class: "btn btn-success text-center" %>
  </div>
  <% end %>
</div>
