<div class="container">
<div class="row">
  <div class="col-md-9">
    <h4 class="my-3">商品一覧（全<%= @item.size %>件）</h4>

    <div class="d-flex flex-wrap">
      <% @items.each do |item| %>
      <div class="mr-3 d-flex flex-column mb-4">
        <%= link_to item_path(item.id) do %>
        <%= image_tag item.image, :size => '180x150' %>
        <p class="ml-1 text-dark"><%= item.name %></p>
        <span class="ml-1 text-dark">¥<%= item.price.to_s(:delimited) %></span>
        <% end %>
      </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center text-center">
      <%= paginate @items %>
    </div>
  </div>
</div>
</div>
