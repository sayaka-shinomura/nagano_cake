<div class="container">
<div class="row">
  <div class="col">
    <h4 class="my-3">商品一覧（全<%= @item.size %>件）</h4>

    <table class="col-md-3">
        <tbody>
          <tr><% @items.each do |item| %>
            <td>
              <%= image_tag item.image, :size => '200x180' %>
              <br>
              <%= link_to item_path(item) do %>
              <p><%= item.name %></p>
              <% end %>
              <p>￥<%= item.price %></p>
            </td>
            <% end %>
            </tr>
        </tbody>
    </table>
    <%= paginate @items %>
 </div>
</div>
</div>

