<div class="container">
 <div class="row">

    <div class="col-md-8 offset-md-1">
    <table class="table">
        <tbody>
            <tr>
            <td><%= image_tag @item.image %></td>
            <td>
              <p><strong><%= @item.name %></strong></p>
              <p><%= @item.introduction %></p>
              <p><%= @item.price %></p>
            </td>
            </tr>
        </tbody>
        </table>
</div>
</div>
</div>
<div class="container">
 <div class="row">
  <div class="com-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <div class="form-group">
            <%= form_with model: @cart_items do |f| %>
     <%= f.select :amount, [["1", "1"], ["2", "2"]], include_blank: "個数選択" %>

     <%= f.submit 'カートに入れる', class:"btn btn-success" %>
  <% end %>
        </div>
        </div>
</div>
</div>
