<p id="notice"><%= notice %></p>

<div class="container">
  <div calss="row">
    <div class="col-sm-12 col-md-10 col-lg-10 px-5 px-sm-0 mx-auto">
      <h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<form class="form-horizontal" role="form">
  <div class="field">
    <%= f.label :'名前' %>
    <%= f.label :'（姓）' %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    <%= f.label :'（名）' %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>
  <div class="field">
    <%= f.label :'フリガナ' %>
    <%= f.label :'（セイ）' %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    <%= f.label :'（メイ）' %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>
  <div class="field">
    <%= f.label :'メールアドレス' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :'郵便番号（ハイフンなし）' %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
  <div class="field">
    <%= f.label :'住所' %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>
  <div class="field">
    <%= f.label :'電話番号（ハイフンなし）' %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>
  <div class="field">
    <%= f.label :'パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :'パスワード（確認用）' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


    <div class="actions">
       <%= f.submit "新規登録", class: "btn btn-sm btn-success" %>
      </div>
      <% end %>

      <div class="actions">
       <p>既に登録お済みの方</p>
       <%= link_to customer_session_path do %>
       <span>こちら</span><% end %><p>から<strong>ログイン</strong>してください</p>
      </div>
</div>
    </div>
  </div>
</div>