<div class="container">
  <div calss="row">
    <div class="col-10 px-5 px-sm-0 mx-auto">
      <h4 class="my-3">新規会員登録</h2>

       <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
       <%= render "public/shared/error_messages", resource: resource %>
       <form class="form-horizontal" role="form">
      <div class="field">
        <%= f.label :'名前', class: "col-2" %>
        <%= f.label :'（姓）', class: "col-1" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-3" %>
        <%= f.label :'（名）', class: "col-1" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-3" %>
       </div>
      <div class="field">
        <%= f.label :'フリガナ', class: "col-2" %>
        <%= f.label :'(セイ)', class: "col-1" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-3" %>
        <%= f.label :'(メイ)', class: "col-1" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-3" %>
      </div>
      <div class="field">
        <%= f.label :'メールアドレス', class: "col-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-3" %>
      </div>
      <div class="field">
        <%= f.label :'郵便番号（ハイフンなし）', class: "col-3" %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-3" %>
      </div>
      <div class="field">
        <%= f.label :'住所', class: "col-3" %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-7" %>
      </div>
      <div class="field">
        <%= f.label :'電話番号（ハイフンなし）', class: "col-3" %>
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "col-3" %>
      </div>
      <div class="field">
        <%= f.label :'パスワード（6字以上）', class: "col-3" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-3" %>
      </div>

      <div class="field">
        <%= f.label :'パスワード（確認用）', class: "col-3" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3" %>
      </div>

      <div class="text-center my-3">
        <%= f.submit "新規登録", class: "btn btn-sm btn-success col-3" %>
        <% end %>
      </div>

      <h4 class="my-3">既に登録お済みの方</h4>
      <P class="ml-5"><%= link_to "こちら", customer_session_path %>からログインしてください</p>
    </div>
  </div>
</div>