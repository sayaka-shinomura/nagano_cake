<div class="container">
  <h4 class="my-3">お客様カート</h1>
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <table>
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% @cart_item.each do |cart_item| %>
                <tr>
                    <td><%= cart_item.item.name %></td>
                    <td><%= cart_item.item.add_tax_price %>円</td>
                    <td><%= cart_item.amount %></td>
                    <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
                </tr>
                <% @total += cart_item.subtotal %>
            <% end %>
        </tbody>
    </table>
    <p>合計金額（税込）<%= @total %>円</p>
    <%= link_to "買い物を続ける", items_path %><br>
</div>
</div>
</div>